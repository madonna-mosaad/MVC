@model Department; //type of Model (the value of parameter that View method take )
@{
    ViewData["Title"] = "Create";
}

<h1>Create new Department</h1>
<br />
<br />

@*form go to post action so will go to create action that [HttpPost]
  form by default make asp-route-department="@Model" 
*@
<form asp-controller="Department" asp-action="Create" method="post">

    @* (asp-for) اللي المستخدم هيدخله هيتخزن في الموديل في البروبيرتي اللي اسمها في *@
    <div>
        @*asp-for instead of for (that link with id)
        <lable for ="Code" ...></lable>
        *@
        <label asp-for="Code" class="col-form-label"></label>
        @*asp-for instead of name(that take the name of property in Model to store in it) and id(that link with (for) in lable)
        <input type ="text" name ="Code" id="Code" ... />
        *@
        <input type="text" asp-for="Code" class="form-control" />
        @*span to alert the message that I put in Required validation if user not write the code *@
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Name" class="col-form-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        @*span to alert the message that I put in Required validation if user not write the code *@
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input type="datetime-local" asp-for="DateOfCreation" class="form-control" />
    </div>

    @*submit that make clr go to the action that I put in form tag (Create)  *@
    <input type="submit" value="Create" class="btn btn-primary mt-5" />
    @*<a></a> is always go to Get Action*@
    <a asp-controller="Department" asp-action="Index" class="btn btn-Light mt-5">Back to home</a>
</form>

